<Window x:Class="TextboxToFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextboxToFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WrapPanel Background="DeepPink" Margin="20" Grid.Row="0">
            <Button Content="Save" Name="savebtn" Background="Aqua" Padding="5"></Button>
            <ToggleButton Content="AutoSave" Name="autoSavebtn" Background="Aqua" Padding="5"></ToggleButton>
            <Button Content="Cut" Name="cutbtn" Background="Aqua" Padding="5"></Button>
            <Button Content="Copy" Name="copybtn" Background="Aqua" Padding="5"></Button>
            <Button Content="Paste" Name="pastebtn" Background="Aqua" Padding="5"></Button>
            <Button Click="selectAllbtn_Click" Content="Select All" Name="selectAllbtn" Background="Aqua" Padding="5"></Button>
        </WrapPanel>
            <TextBlock Background="White" Name="txtbox" FontSize="25" Margin="10" Grid.Row="1"></TextBlock>
    </Grid>
</Window>
